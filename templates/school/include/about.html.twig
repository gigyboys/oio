<div class="mg_v5 mg_10 minh_100">	
	<div id="t">
		<div class="t_header">
			<div class="t_header_content">{#
				#}<div class="t_header_item selected" id="about">
					<div class="t_header_item_text">
						<i class="fas fa-question-circle"></i> Pr√©sentation
					</div>
				</div>{#
				#}<div class="t_header_item" id="field">
					<div class="t_header_item_text">
						<i class="fas fa-clipboard-list"></i> {{ school.option.pluralName | capitalize }}
					</div>
				</div>{#
				#}<div class="t_header_item" id="contact">
					<div class="t_header_item_text">
						<i class="far fa-address-book"></i> Contacts
					</div>
				</div>{#
			#}</div>
			<div class="t_header_sep">
				<div class="t_header_sep_slide">
				</div>
			</div>
		</div>
		<div class="t_content">
			<div class="mg_v10">
				<div class="t_content_item selected" id="c_about">
					{{ school.description | raw}}
				</div>
			</div>
			<div class="t_content_item" id="c_field">
				{# fields #}
				{% if fields %}
					{% for field in fields %}
						<div class="mg_b10">
							<div>
								<strong><i class="fas fa-dot-circle"></i> {{ field.name }}</strong>
							</div>
							{% if field.description is null or field.description | trim == "" %}
							{% else %}
								<div class="sep mg_v5"></div>
								<div class="d_b">
									{{ field.description | raw }}
								</div>
							{% endif %}
						</div>
					{% endfor %}
				{% endif %}
			</div>
			<div class="t_content_item" id="c_contact">
				{{ include("school/include/contact.html.twig") }}
			</div>
		</div>
	</div>
</div>