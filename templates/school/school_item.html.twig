<div class="sl_item">
    <div class="sl_header">
        <div class="sl_logo">
            {# twig extension #}
            {% set cover = schoolCover(school) %}
            <img src="{{ cover | imagine_filter('218x140') }}" alt="img sl" />
        </div>
        <div class="sl_category">
            {# twig extension #}
            {% set categories=getCategoriesBySchool(school, 6, true) %}
            {% for category in categories %}
                <div class="sl_category_item">{{ category.name }}</div>
            {% endfor %}
        </div>
        <div class="sl_short_description">
            {{ substrSpace(school.shortDescription, 165) }}
        </div>
    </div>
    <div class="sl_label">
        <a title="{{ school.name }}" href="{{ path('school_view', {'slug': school.slug}) }}">
            {% if school.shortName | trim != "" %}
                <span class="sl_shortname">{{ school.shortName }}</span>
                <br />
            {% endif %}
            <span class="sl_name">{{ school.name }}</span>
        </a>
    </div>
    <div class="sl_action">
        <div class="sl_action_about">
            {# twig extension #}
            {% set logo = schoolLogo(school) %}
            <a href="{{ path('school_view', {'slug': school.slug, 'type': 'about'}) }}"><img src="{{ logo | imagine_filter('20x20') }}" alt="AU" /></a>
        </div>
        <div class="sl_action_bg">
            <a href="{{ path('school_view', {'slug': school.slug, 'type': 'post'}) }}"><i class="far fa-edit"></i></a>
        </div>
        <div class="sl_action_et">
            <a href="{{ path('school_view', {'slug': school.slug, 'type': 'event'}) }}"><i class="fas fa-calendar-day"></i></a>
        </div>
        <div class="sl_action_evaluation">
            <a href="{{ path('school_view', {'slug': school.slug, 'type': 'evaluation'}) }}"><i class="fas fa-star-half-alt"></i></a>
        </div>
        <div class="sl_action_doc">
            <a href="{{ path('school_view', {'slug': school.slug, 'type': 'document'}) }}"><i class="fas fa-arrow-alt-circle-down"></i></a>
        </div>
    </div>
</div>