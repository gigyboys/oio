<div class="dialog">
	<div class="header">
		<div class="title">
			Edition de l'illustration de l'offre
		</div>
		<div class="button_closable">
			<i class="fas fa-times-circle"></i>
		</div>
	</div>
	
	<div class="pd_5">
		{% set classDefault = '' %}
		{% if current is null %}
			{% set classDefault = 'active' %}
		{% endif %}
		<div class="images_wrapper images_popup_wrapper"><!--
			--><div class="image_item job_illustration_item {{ classDefault }}" id="default_illustration">
					<img class="image_popup job_illustration_popup default" data-type="job_illustration" data-target="{{ path('job_manager_select_illustration', {'job_id': job.id, 'illustration_id': 0}) }}" src="{{ 'default/images/job/illustration/default.jpeg' | imagine_filter('116x116') }}" alt="" />
				</div><!--
			{% for illustration in illustrations %}
				{% set classActive = '' %}
				{% if illustration.current %}
					{% set classActive = 'active' %}
				{% endif %}
				-->{{ include("job/include/illustration_item.html.twig") }}<!--
			{% endfor %}
		--></div>
	</div>
	<div class="sp"></div>
	<div class="pd_10 ta_c">
		<label for="job_illustrationfile" class="c_p">télécharger une image ...</label>
		<input class="ajax_job_illustration d_n" data-type="job_illustration" id="job_illustrationfile" name="file" type="file" accept="image/*" data-target="{{ path('job_manager_upload_illustration', {'job_id': job.id}) }}" />
	</div>
	<div class="sp"></div>
	<div class="pd_10 tacenter">
		<i class="fas fa-info-circle"></i> Cliquer sur l'image ou télécharger un nouveau pour changer l'illustration.
	</div>
</div>