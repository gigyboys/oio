
<div id="list_comment" class="mg_t5">
		<div class="mg_10">
			{% if comments | length == 0%}
				<div class="mg_v20 ta_c">
					<strong>Aucun commentaire à afficher</strong>
				</div>
			{% else %}
				<div>{{ comments | length }} {% if comments | length > 1 %}commentaires{% else %}commentaire{% endif %}.</div>
				{% for comment in comments %}
					{% if comment.post %}
						<div class="user_comment_item">
							<div class="sep"></div>
							<div class="mg_v10">
								<div class="illustration_wrap">
									{% set illustration = postIllustration(comment.post) %}
									<a href="{{ path('blog_post_view', {'slug': comment.post.slug}) }}">
										<img src="{{ illustration | imagine_filter('60x60') }}" />
									</a>
								</div>
								<div class="comment_wrap">
									<div class="mg_b5">Ecrit le {{ getDateLabel(comment.date) }} à {{ comment.date | date('H:i') }}
										sur l'article <a href="{{ path('blog_post_view', {'slug': comment.post.slug}) }}"><strong>{{ comment.post.title }}</strong></a></div>
									<div>{{ comment.comment}}</div>
								</div>
								<div class="both"></div>
							</div>
						</div>
					{% endif %}
					{% if comment.event %}
						<div class="user_comment_item">
							<div class="sep"></div>
							<div class="mg_v10">
								<div class="illustration_wrap">
									{% set illustration = eventIllustration(comment.event) %}
									<a href="{{ path('event_view', {'slug': comment.event.slug}) }}">
										<img src="{{ illustration | imagine_filter('60x60') }}" />
									</a>
								</div>
								<div class="comment_wrap">
									<div class="mg_b5">Ecrit le {{ getDateLabel(comment.date) }} à {{ comment.date | date('H:i') }} sur l'évènement <a href="{{ path('event_view', {'slug': comment.event.slug}) }}"><strong>{{ comment.event.title }}</strong></a></div>
									<div>{{ comment.comment}}</div>
								</div>
								<div class="both"></div>
							</div>
						</div>
					{% endif %}
				{% endfor %}
			{% endif %}
		</div>
	</div>