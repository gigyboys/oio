	</div>
	<div>

		{#
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
		#}

		<form name="" method="post">
			<div>                
				<div><label for="datebegin_assignation" class="required">Date début * : </label></div>
				<div><input type="text" id="datebegin_assignation" name="datebegin" required="required"  class="default_input" /></div>
			</div>
			<div>
				<div><label for="dateend_assignation" class="required">Date fin * : </label></div>
				<div><input type="text" id="dateend_assignation" name="dateend" required="required"  class="default_input" /></div>
			</div>
			<div>
				<div><label for="school_id" class="required">Etablissement : </label></div>
				<div>
					<select id="school_id" name="schoolId" class="default_input">
						<option value="0" ></option>
                        {% for school in schools %}
							<option value="{{ school.id }}" >{{ school.shortName }} - {{ school.name }}</option>
                        {% endfor %}
					</select>
				</div>
			</div>
			
			<div style="padding:10px 0">
				<button type="submit" id="Assigner" name="add" class="standar_button">Assigner</button>
