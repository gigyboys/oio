{% extends "back.html.twig" %}

{% block title %}
  Article #{{ post.id }} - Etablissements
{% endblock %}

{% block body_header %}
	<div class="bc">
		<span class="bc1"><a href="{{ path('admin_blog_post') }}"><img src="{{ asset('image/bg_icon.png') }}" style="width:14px; height:auto" /> <span>{{ 'Blog' | trans }}</span></a> </span>
		<span class="dd">
			<span href="#" class="dd_src">
				<span class="bcdd"></span>
			</span>
            {{ include("admin/blog/include/blog_principal_action.html.twig") }}
		</span>
		<span class="bc1"><a href="{{ path('admin_blog_post_edit', {'post_id': post.id}) }}">{{ post.title }}</a></span>
		<span class="dd">
			<span href="#" class="dd_src">
				<span class="bcdd"></span>
			</span>
            {{ include("admin/blog/include/post_other_action.html.twig") }}
		</span> 
		<span class="bc1"><a href="{{ path('admin_blog_post_schools', {'post_id': post.id}) }}"><span>Etablissements</span></a> </span>
	</div>
	<div style="padding:8px; float:right">
		<div style="float:left">
			<span class="dd" style="display:inline-block;">
				<span href="#" class="dd_src" style="cursor:pointer">
					Autres actions
				</span>
                {{ include("admin/blog/include/post_other_action.html.twig") }}
			</span> 
		</div>
	</div>
{% endblock %}

{% block content_body %}
	<div>
		<div style="float:left; height: 86px;margin:5px">
			{# twig extension #}
			{% set illustration = postIllustration(post) %}
			<img id="post_illustration" style="width: 80px; height: 80px" src="{{ illustration | imagine_filter('80x80') }}" alt="img sl" />
		</div>
		<div style="margin-left: 90px;">
			<div>
				<table>
					<tr>
						<td>Name</td>
						<td>:</td>
						<td style="padding:5px"><span id="sl_view_name">{{ post.title }}</span></td>
					</tr>
					<tr>
						<td>Slug</td>
						<td>:</td>
						<td style="padding:5px"><span id="sl_view_slug">{{ post.slug }}</span></td>
					</tr>
				</table>
			</div>
		</div>
		<div class="both"></div>
	</div>
	
	<div style="background:#ddd; padding: 5px; margin:5px; border:1px solid #bbb">
		<span><img src="{{ asset('image/list_icon.png') }}" style="width:12px; height:auto" /> Liste des évènements</span>
	</div>
	
	<div class="a_datatable">
		<div class="a_datatable_head">
			<div class="a_datatable_head_left">
				<span style="display:inline-block; margin-top:5px; margin-left:6px"> Rechercher :
					<input type="text" class="default_input a_list_search_input" data-target-id="list_schools"/><!--
					--><span class="a_list_search_reset"><img src="{{ asset('image/cross_icon.png') }}" style="width:12px; height:auto" /></span>
				</span>
			</div>
			<div class="a_datatable_head_right">
                {#right#}
			</div>
		</div>
		
		
		<div class="a_datatable_body">
			<table class="a_table" id="list_schools">
				<tr class="a_table_head">
					<th class="a_table_cell_id" style="width: 50px; text-align:center">Id</th>
					<th class="taleft">Nom</th>
					<th class="taleft">Sigle</th>
					<th class="tacenter">Appartenance</th>
					<th class="a_table_cell_action tacenter">Actions</th>
				</tr>
				{% for school in schools %}
					<tr class="a_table_line category_item" id="category_{{ school.id }}" data-text="{{ school.shortName }} {{ school.name }}" style="display:table-row">
						<td class="a_table_cell_id" style="width: 50px; text-align:center">
							<div>{{ school.id }}</div>
						</td>
						<td>
							<a href="{{ path('admin_school_edit', {'id': school.id}) }}">{{ school.name }}</a>
						</td>
						<td>
							<a href="{{ path('admin_school_edit', {'id': school.id}) }}">{{ school.shortName }}</a>
						</td>
						<td style="text-align:center">
							<span class="toggle_case" data-entity="tag" data-target="{{ path('admin_blog_post_toggle_school', {'post_id': post.id, 'school_id': school.id }) }}">
								{% set isSchool = isSchoolPost(post, school) %}
								{% if isSchool %}
									<span class="greenstate" style="display:none"><span class="greenpastille"></span></span>
									<span class="redstate"><span class="redpastille"></span></span>
								{% else %}
									<span class="greenstate"><span class="greenpastille"></span></span>
									<span class="redstate" style="display:none"><span class="redpastille"></span></span>
								{% endif %}
							</span><span class="state_loading" style="display:none">
								<img src="{{ asset('image/loading.svg')  }}" style="width:20px; height:20px;display: inline-block; vertical-align: middle;" />
							</span>
						</td>
						<td class="a_table_cell_action tacenter">
							Action
						</td>
					</tr>
				{% endfor %}
			</table>
		</div>
		
		<div class="a_datatable_foot">
			<div class="a_datatable_foot_left">
				<span style="display:inline-block; margin-top:6px; margin-left:6px" class="result_state">{{ schools | length }} resultat(s)</span>
			</div>
			<div class="a_datatable_foot_right">
				{#<span>right</span> #}
			</div>
		</div>
	</div>
{% endblock %}

{% block body_footer %}
	<span style="display:inline-block; margin-top:6px; margin-left:6px">{{ schools | length }} Etablissements</span>
{% endblock %}
