<div style="background:#fff;">
	<div style="border-bottom:1px solid #ddd; padding: 10px;  height:24px; ">
		<div style="float:left">
			Edition de l'illustration de l'évènement
		</div>
		<div style="float:right;cursor: pointer; " class="button_closable">
			<img src="{{ asset('image/close_icon.png') }}" style="width:16px; height:auto" alt="x" />
		</div>
	</div>
	
	<div style="background:#fff; padding: 5px; ">
		<div style="padding:5px">
			{% set classDefault = '' %}
			{% if current is null %}
				{% set classDefault = 'active' %}
			{% endif %}
			<div class="images_popup_wrapper"><!--
				--><div class="image_item illustration_item {{ classDefault }}" id="default_illustration">
						<img class="image_popup event_illustration_popup default" data-type="event_illustration" data-target="{{ path('event_manager_select_illustration', {'event_id': event.id, 'illustration_id': 0}) }}" src="{{ 'default/images/event/illustration/default.jpeg' | imagine_filter('116x116') }}" alt="" />
					</div><!--
				{% for illustration in illustrations %}
					{% set classActive = '' %}
					{% if illustration.current %}
						{% set classActive = 'active' %}
					{% endif %}
					-->{{ include("event/include/illustration_item.html.twig") }}<!--
				{% endfor %}
			--></div>
		</div>
	</div>
	<div style="border-top:1px solid #ddd;padding:10px; text-align:center">
		<label for="event_illustrationfile" style="cursor:pointer">télécharger une image ...</label>
		<input style="display: none" data-type="event_illustration" id="event_illustrationfile" name="file" class="ajax_event_illustration" type="file" accept="image/*" data-target="{{ path('event_manager_upload_illustration', {'event_id': event.id}) }}" />
	</div>
	<div style="border-top:1px solid #ddd;padding:10px; text-align:center">
		<img src="{{ asset('image/info_icon.png') }}" style="width:20px; height:20px; display: inline-block; vertical-align: middle" alt="i" /> Cliquer sur l'image ou télécharger un nouveau pour changer l'illustration.
	</div>
</div>