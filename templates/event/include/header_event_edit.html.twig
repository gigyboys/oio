<div class="pd_5">
	<span>
		<i class="far fa-edit"></i> Edition de l'évènement :
		<a href="{{ path('event_manager_edit', {'event_id': event.id}) }}">
			<strong class="et_title_{{ event.id }}">{{ event.title }}</strong>
		</a>
	</span>
</div>
<div class="edit_header">
	<div class="f_l">
		<span class="dd d_ib">
			<span href="#" class="dds c_p">
				<i class="fas fa-info-circle"></i> <span>info</span>
			</span>
			<span class="ddt entity_info" data-display="block">
				<span class="mg_5 d_b">
					<span><i class="fas fa-user-circle"></i> {{ getLinkUserInfo(event.user, event.user.name) | raw }}</span><br />
					<span><i class="fas fa-calendar-alt"></i> {{ getDateLabel(event.date) }} à {{ event.date | date('H:i') }}</span><br />
					<span><i class="far fa-eye"></i> {{ event.views | length }}</span><br />
					<span><i class="fas fa-comment-dots"></i> {{ getValidComments(event) | length }}</span><br />
				</span>
			</span>
		</span>
	</div>
	<div class="f_r">
        {% if event.tovalid == false %}
			<span class="create_event c_p" data-target="{{ path('event_manager_tovalid_ajax', {'event_id' : event.id})}}">
				<i class="far fa-check-circle"></i>
				<span> Soumettre à une validation</span>
			</span>
        {% elseif event.tovalid and event.valid == false %}
			En attente de validation
        {% elseif event.valid %}
			Evènement validé
        {% endif %}
		|
		<span class="dd d_ib">
			<span href="#" class="dds c_p">
				Actions
			</span>
            {{ include("event/include/event_other_action.html.twig") }}
		</span>
	</div>
	<div class="both"></div>
</div>