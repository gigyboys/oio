								<span>Mon espace client</span>
							</span>
                            </div>
                        {% endif %}
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            {% set avatar = userAvatar(app.user) %}
                            <div class="dd_target connected" data-display="block">
                                <div id="user_info_header">
                                    <div class="avatar_wrap">
                                        <img id="avatar_banner_target" src="{{ avatar | imagine_filter('50x50') }}" alt="{{ app.user.username }}" />
                                    </div>
                                    <div class="info_wrap">
                                        <a class="link" id="ur_profil_link" href="{{ path('user_profile', {'username': app.user.username}) }}">
                                            <span id="nav_target_ur_username">{{ app.user.username }}</span><br />
                                            <span id="nav_target_ur_name">{{ app.user.name }}</span><br />
                                            <span id="nav_target_ur_email">{{ app.user.email }}</span>
                                        </a>
                                    </div>
                                    <div class="both"></div>
                                </div>
                                <div class="link_wrap">
                                    <a class="link" id="ur_setting_link" href="{{ path('user_profile', {'username': app.user.username, 'type': 'setting'}) }}">
                                        <span>Paramètres</span>
                                    </a>
                                </div>

                                <div class="link_wrap">
                                    <a class="link" id="ur_setting_link" href="{{ path('user_profile', {'username': app.user.username, 'type': 'contribution'}) }}">
                                        <span>Contributions</span>
                                    </a>
                                </div>
                                <div class="link_wrap">
                                    <div class="pd_10">
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <a class="link standar_button pd_5" target="_blank" href="{{ path('admin_home') }}" style="padding:5px; display:block; float: left">
                                                <span>Tableau de bord</span>
                                            </a>
                                        {% endif %}

                                        <a class="link standar_button pd_5 mg_r0" href="{{ path('user_logout') }}" style="padding:5px; display:block; float: right; ">
                                            <span>Déconnexion</span>
                                        </a>
