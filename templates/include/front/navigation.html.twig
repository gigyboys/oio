            <div id="nav_right">
                <div id="user">
                    <div class="dd">
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            {% set avatar = userAvatar(app.user) %}
                            <div class="dd_src">
								<span class="connected">
									<table>
										<tr>
											<td class="user_avatar">
												<span class="wrap">
													<img id="avatar_banner" style="width:30px; height: 30px" src="{{ avatar | imagine_filter('32x32') }}" alt="{{ app.user.username }}" />
												</span>
											</td>
											<td class="user_name" title="{{ app.user.name }}">
												<span class="wrap">
													<span id="nav_src_ur_name">{{ app.user.name }}</span>
												</span>
											</td>
										</tr>
									</table>
								</span>
                            </div>
                        {% else %}
                            <div class="dd_src">
							<span class="not_connected">
