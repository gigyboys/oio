{% extends "front.html.twig" %}

{% block title %}
  Je crée mon article
{% endblock %}


{% block body %}
	<div class="cr">
		<div class="ct">
			<div class="mg_10">
				<div class="label_title">
					<strong>Création d'un article</strong>
				</div>
				<div class="pm_bloc">
					<div class="pm_form">
						{% if msg is defined %}
						<div>{{ msg | raw }}</div>
						{% endif %}
						<div class="mg_v10">

                            {{ form_start(form) }}
							<div class="pm_form_wrap">
								<div class="mg_b10">
									<div>{{ form_label(form.title, 'Titre *:') }}</div>
									<div>{{ form_widget(form.title, { 'attr': {'class': 'default_input'} }) }}</div>
								</div>

								<div class="mg_t10">
                                    {{ form_widget(form.add, { 'attr': {'class': 'standar_button'} }) }}
								</div>
                                {{ form_widget(form) }}
							</div>
                            {{ form_end(form) }}
						</div>
					</div>
					<div class="pm_desc">
						<h1>
							Création d'un article
						</h1>
						<div class="sp"></div>
						<p>
							Cette page vous permet de créer un article. 
							Après avoir fourni le titre, qui est l'information obligatoire, 
							vous allez être redirigé vers la page dans laquelle vous pourrez éditer les détails de l'article.
						</p>
					</div>
					<div class="both"></div>
				</div>

			</div>
		</div>
	</div>
{% endblock %}
